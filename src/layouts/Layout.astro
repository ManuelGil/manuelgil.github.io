---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <!-- Performance optimizations -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://api.example.com" />

    <!-- Resource hints -->
    <link rel="preload" as="image" href="/favicon.ico" />

    <meta name="generator" content={Astro.generator} />

    <meta
      name="description"
      content="Open Source Portfolio - Showcasing developer projects"
    />
    <meta name="author" content="Manuel Gil" />

    <link rel="canonical" href="https://manuelgil.me/" />

    <meta name="robots" content="index" />

    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Open Source Portfolio - Showcasing developer projects"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://manuelgil.me/" />

    <title>{title}</title>

    <!-- Inline critical CSS -->
    <style is:inline>
      /* Critical CSS para el primer render */
      body {
        margin: 0;
      }
      .min-h-screen {
        min-height: 100vh;
      }
      .bg-gray-900 {
        background-color: #111827;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
