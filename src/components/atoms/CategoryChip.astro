---
interface Props {
  label: string;
  active?: boolean;
}
const { label, active = false } = Astro.props;
---

<button
  data-category={label}
  class="rounded-full bg-white px-4 py-2 text-sm font-medium text-gray-600 shadow-sm transition-all hover:bg-gray-50 hover:shadow-md"
  data-active={active}
  type="button"
>
  {label}
</button>
